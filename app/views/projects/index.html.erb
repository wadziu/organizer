<h1 class="span-24 last">Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td class="span-8 colborder"><%=h project.name %></td>
      <td class="span-4 colborder"><%= link_to 'Show', project, :id=>"add" %></td>
      <td class="span-4"><%= link_to 'Edit', edit_project_path(project) %></td>
      <td class="span-4 last"><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New project', new_project_path %>
